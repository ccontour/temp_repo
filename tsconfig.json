{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@formio-sdk/formio-sdk": [
        "libs/formio-sdk/src"
      ],
      "@formio-sdk/formio-sdk/*": [
        "libs/formio-sdk/src/*"
      ]
    }
  }
}